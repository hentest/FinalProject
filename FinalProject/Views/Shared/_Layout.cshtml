<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FIFA World Cup 2018</title>

    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/News.css" type="text/css" media="screen" />
    
</head>
<body>
    <div class="page-wrapper">
        <br /><br />
        <header>
            <img src="~/Visual/Images/Fifa_World_Cup_Russia_2018_logo.png" alt="FIFA World Cup 2018" style="width:25%; margin-left:8%;" class="logo"
                 onclick="location.href='@Url.Action("Index", "News")'" />
        </header>
        <br /><br />
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("FIFA World Cup 2018", "Index", "News", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse" id="slow">
                    <ul class="nav navbar-nav">
                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("News", "Index", "News")</li>
                            <li>@Html.ActionLink("Games Statistics", "BeachStatistics", "Beach")</li>
                            <li>@Html.ActionLink("Top 10 Teams", "Map", "Beach")</li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">Manage<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("My Account", "Details", "Account")</li>
                                    <li class="divider"></li>
                                    <li>@Html.ActionLink("Users", "ManageUsers", "Account")</li>
                                    <li>@Html.ActionLink("Add Auther", "CreateAuthor", "Account")</li>
                                    <li class="divider"></li>
                                    <li>@Html.ActionLink("Articles", "Index", "Article")</li>
                                    <li>@Html.ActionLink("Add Article", "Create", "Article")</li>
                                    <li>@Html.ActionLink("Comment", "Index", "Comments")</li>
                                    <li class="divider"></li>
                                    <li>@Html.ActionLink("Beaches", "Index", "Beach")</li>
                                    <li class="divider"></li>
                                    <li>@Html.ActionLink("Article Timeline", "Diagnostics", "Article")</li>
                                    <li>@Html.ActionLink("Most viewd articles", "Diagnostics", "Enter")</li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole("Author"))
                        {
                            <li>@Html.ActionLink("News", "Index", "News")</li>
                            <li>@Html.ActionLink("Games Statistics", "BeachStatistics", "Beach")</li>
                            <li>@Html.ActionLink("Top 10 Teams", "Map", "Beach")</li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">Manage<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("My Account", "Details", "Account")</li>
                                    <li class="divider"></li>
                                    <li>@Html.ActionLink("My Articles", "Index", "Article")</li>
                                    <li>@Html.ActionLink("Add Article", "Create", "Article")</li>
                                    <li>@Html.ActionLink("My Comment", "Index", "Comments")</li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole("NormalUser"))
                        {
                            <li>@Html.ActionLink("News", "Index", "News")</li>
                            <li>@Html.ActionLink("Games Statistics", "BeachStatistics", "Beach")</li>
                            <li>@Html.ActionLink("Top 10 Teams", "Map", "Beach")</li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">Manage<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("My Account", "Details", "Account")</li>
                                    <li class="divider"></li>
                                    <li>@Html.ActionLink("My Comment", "Index", "Comments")</li>
                                </ul>
                            </li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>
    </div>
    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <section id="about">
                <h3>About</h3>
                <p>
                    In this website you can find articles about FIFA World Cup 2018.
                    Also Information About the Games On Real Time!!
                </p>

            </section>
            <section id="Creators">
                <h3>Creators</h3>
                <ul>
                    <li>Yarden Bitan</li>
                    <li>Hen Ben Shimol</li>
                    <li>Aviv Hakmon</li>
                    <li>Gal Shemesh</li>
                </ul>
            </section>
        </div>
    </footer>  
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>